<div class="expenses-container">
  <h2>Your Expenses</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Item</th>
        <th>Amount</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{!-- renderExpenses dynamically builds the table here --}}
    </tbody>
  </table>
</div>

<!-- Expense Entry Form -->
<div class="expense-form">
    <h3>Add New Expense:</h3>
    <form class="form add-expense">
      <div class="form-group">
        <label for="date">Date:</label>
        <input class="form-input" type="date" name="date" id="date" required>
      </div>
      <div class="form-group">
        <label for="item">Item:</label>
        <input class="form-input" type="text" name="item" id="item" required>
      </div>
      <div class="form-group">
        <label for="amount">Amount:</label>
        <input class="form-input" type="number" name="amount" id="amount" required>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Expense</button>
      </div>
    </form>
</div>


<script src="/js/expense-script.js"></script>
